<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

   		<record model="ir.ui.view" id="view_payment_term_line_form_months">
			<field name="name">account.payment.term.line.form.months</field>
			<field name="model">account.payment.term.line</field>
			<field name="inherit_id" ref="account.view_payment_term_line_form"/>
			<field name="arch" type="xml">
				<field name="days2" position="after">
					<field name="months" />
					<separator string="Advanced Triggering" colspan="2"/>
					<field name="exclude_month1" />
					<field name="exclude_day1" />
					<field name="exclude_month2" />
					<field name="exclude_day2" />
				</field>
			</field>
   		</record>

   		<record model="ir.ui.view" id="view_payment_term_line_tree_months">
			<field name="name">account.payment.term.line.tree.months</field>
			<field name="model">account.payment.term.line</field>
			<field name="inherit_id" ref="account.view_payment_term_line_tree"/>
			<field name="arch" type="xml">
				<field name="days2" position="after">
					<field name="months"/>
					<field name="exclude_month1" colspan="4"/>
					<field name="exclude_day1" colspan="4"/>
					<field name="exclude_month2" colspan="4"/>
					<field name="exclude_day2" colspan="4"/>
				</field>
			</field>
   		</record>

	</data>
</openerp>
