                             name="discount" class="oe_inline"
                           on_change="product_id_change(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, False, False, parent.date_order, product_packaging, parent.fiscal_position, True, context, parent.salesman_pricelist, parent.user_id, parent.section_id, discount, discount2)"/>
                </xpath>
	  		
	  		</field>
		</record>
		
		
    </data>
</openerp>
